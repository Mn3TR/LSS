{
    "compilerOptions": {
        "target": "es2020",
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": [
            "ES2020"
        ],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": false,
        "removeComments": true,
        "inlineSourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "bin"
    ]
}